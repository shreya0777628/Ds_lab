class Diagonal {
    int n, *data;
public:
    Diagonal(int size) : n(size) { data = new int[n](); }

    void set(int i, int j, int val) {
        if (i == j) data[i - 1] = val;
    }

    int get(int i, int j) {
        return (i == j) ? data[i - 1] : 0;
    }

    void display() {
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++)
                cout << get(i, j) << " ";
            cout << "\n";
        }
    }
};
